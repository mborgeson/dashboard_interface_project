# =============================================================================
# B&R Capital Dashboard Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env files to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
API_VERSION=v1
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
API_PORT=8000
WORKERS=4

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/br_capital
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=br_capital
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DB_PORT=5432
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@bandrcapital.com
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@bandrcapital.com
PGADMIN_PASSWORD=admin
REDIS_COMMANDER_PORT=8081

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_SWAGGER_UI=true
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_APM=false
METRICS_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10
